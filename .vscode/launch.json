{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (dev + mock)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "output": "${workspaceFolder}/dockge",
            "args": ["--dev", "--mock", "--port", "5001", "--data-dir", "test-data", "--stacks-dir", "test-data/stacks"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Frontend"
        },
        {
            "name": "Backend (dev + mock, skip frontend build)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "output": "${workspaceFolder}/dockge",
            "args": ["--dev", "--mock", "--port", "5001", "--data-dir", "test-data", "--stacks-dir", "test-data/stacks"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Backend (attach)",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ]
}
