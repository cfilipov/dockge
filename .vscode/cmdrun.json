{
  "commands": [
    {
      "name": "frontend",
      "group": "Build",
      "commands": [
        "cd web && pnpm run build"
      ]
    },
    {
      "name": "full e2e",
      "group": "Test",
      "commands": [
        "cd e2e && pnpm test"
      ]
    },
    {
      "name": "backend with race detector",
      "group": "Test",
      "commands": [
        "go test -race -v ./..."
      ]
    },
    {
      "name": "update screenshots",
      "group": "Test",
      "commands": [
        "cd e2e && npx playwright test --update-snapshots"
      ]
    },
    {
      "name": "backend fuzzing",
      "group": "Test",
      "commands": [
        "go test -fuzz=FuzzParseYAML -fuzztime=10s ./internal/compose/"
      ]
    },
    {
      "name": "backend benchmark",
      "group": "Test",
      "commands": [
        "go test -bench=. -benchmem -run='^$' ."
      ]
    },
    {
      "name": "dev mode with mock data",
      "group": "Run",
      "commands": [
        "task dev-go"
      ]
    },
    {
      "name": "calude",
      "group": "Claude",
      "commands": [
        "claude"
      ]
    },
    {
      "name": "claude (hands-free)",
      "group": "Claude",
      "commands": [
        "claude --dangerously-skip-permissions"
      ]
    }
  ]
}